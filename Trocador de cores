<body>
    <header>
        <img src="assets/logoCITi copy 1.png" alt="Logo do CITI">
    </header>
        
        

            <div class="container">
                <h1>Trocador de cores</h1>
                <button type="button" id="change">Trocar</button>
                <p id = "texto1">Background: #292929</p>
            </div>
            
            <script>
            
                let button = document.getElementById('change');
                let colors = ['#F2F2F2','#C7C7C7','#292929'];
                let textColors = ['Backgound: #F2F2F2', 'Background: #C7C7C7', 'Backgound: #292929'];
                let contador = 0;
                button.addEventListener('click',function(){
                    if(contador==0){
                        document.body.style.background = colors[0] ;
                        document.getElementById('texto1').innerHTML = textColors[0];
                        contador++;
                    }
                    else if(contador==1){
                        document.body.style.background = colors[1] ;
                        document.getElementById('texto1').innerHTML = textColors[1];
                        contador++;
                    }
                    else{
                        document.body.style.background = colors[2] ;
                        document.getElementById('texto1').innerHTML = textColors[2];
                        contador-=2;
                    }
                })
               
            			

</script>

</body>
